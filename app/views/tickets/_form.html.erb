
<%= simple_form_for @ticket do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :raffle %>
    <%= f.association :user %>
    <%= f.input :number %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, f.object.new_record? ? 'Create Ticket' : 'Update Ticket', class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
