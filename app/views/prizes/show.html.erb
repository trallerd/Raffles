<% content_for :title do %>
  Prize's Details
<% end %>

<div class="page-header">
  <h1>Prize's Details</h1>
  <div>
    <%= link_to edit_prize_path(@prize), class: 'btn btn-success' do %>
      <%= icon 'fas', 'edit' %>
      Edit
    <% end %>
    <%= link_to raffles_path, class: 'btn btn-outline-secondary' do %>
      <%= icon 'fas', 'bars' %>
      Back
    <% end %>
  </div>
</div>

<dl class="dl-horizontal">
  <dt>Raffle:</dt>
  <dd><%= @prize.raffle.description %></dd>

  <dt>Description:</dt>
  <dd><%= @prize.description %></dd>

  <dt>Placing:</dt>
  <dd><%= @prize.placing %></dd>

  <dt>Ticket:</dt>
  <dd><%= @prize.ticket.number %></dd>

</dl>
