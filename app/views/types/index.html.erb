<% content_for :title do %>
  Types
<% end %>

<div class="page-header">
  <h1>Types</h1>
  <%= link_to new_type_path, class: 'btn btn-primary' do %>
    <%= icon 'fas', 'plus' %>
    New Type
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Description</th>
        <th>Inicial number</th>
        <th>Step</th>
        <th>Ticket quantities</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @types.each do |type| %>
        <tr>
          <td><%= type.description %></td>
          <td><%= type.inicial_number %></td>
          <td><%= type.step %></td>
          <td><%= type.ticket_quantities %></td>
          <td>
            <%= link_to type, class: 'btn btn-info btn-sm' do %>
              <%= icon 'fas', 'eye', class: 'fa-fw' %>
            <% end %>
            <%= link_to edit_type_path(type), class: 'btn btn-success btn-sm' do %>
              <%= icon 'fas', 'edit', class: 'fa-fw' %>
            <% end %>
            <%= link_to type, method: :delete, data: { confirm: 'VocÃª tem certeza?' }, class: 'btn btn-danger btn-sm' do %>
              <%= icon 'fas', 'times', class: 'fa-fw' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>