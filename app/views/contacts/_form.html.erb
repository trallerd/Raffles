
<%= simple_form_for @contact do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :remark %>
    <%= f.association :kind %>
    <%= f.association :company %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, f.object.new_record? ? 'Criar Contact' : 'Atualizar Contact', class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
