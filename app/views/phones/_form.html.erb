
<%= simple_form_for @phone do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :number %>
    <%= f.association :contact %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, f.object.new_record? ? 'Criar Phone' : 'Atualizar Phone', class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
