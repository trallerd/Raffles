<% content_for :title do %>
  Detalhes de Phone
<% end %>

<div class="page-header">
  <h1>Detalhes de Phone</h1>
  <div>
    <%= link_to edit_phone_path(@phone), class: 'btn btn-success' do %>
      <%= icon 'fas', 'edit' %>
      Editar
    <% end %>
    <%= link_to phones_path, class: 'btn btn-outline-secondary' do %>
      <%= icon 'fas', 'bars' %>
      Voltar
    <% end %>
  </div>
</div>

<dl class="dl-horizontal">
  <dt>Number:</dt>
  <dd><%= @phone.number %></dd>

  <dt>Contact:</dt>
  <dd><%= @phone.contact %></dd>

</dl>
