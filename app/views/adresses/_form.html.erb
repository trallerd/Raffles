
<%= simple_form_for @adress do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :street %>
    <%= f.input :city %>
    <%= f.input :state %>
    <%= f.association :contact %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, f.object.new_record? ? 'Criar Adress' : 'Atualizar Adress', class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
