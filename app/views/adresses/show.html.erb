<% content_for :title do %>
  Detalhes de Adress
<% end %>

<div class="page-header">
  <h1>Detalhes de Adress</h1>
  <div>
    <%= link_to edit_adress_path(@adress), class: 'btn btn-success' do %>
      <%= icon 'fas', 'edit' %>
      Editar
    <% end %>
    <%= link_to adresses_path, class: 'btn btn-outline-secondary' do %>
      <%= icon 'fas', 'bars' %>
      Voltar
    <% end %>
  </div>
</div>

<dl class="dl-horizontal">
  <dt>Street:</dt>
  <dd><%= @adress.street %></dd>

  <dt>City:</dt>
  <dd><%= @adress.city %></dd>

  <dt>State:</dt>
  <dd><%= @adress.state %></dd>

  <dt>Contact:</dt>
  <dd><%= @adress.contact %></dd>

</dl>
